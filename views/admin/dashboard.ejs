<section class="admin-section" data-aos="fade-up">
  <div class="row g-4 align-items-center mb-4">
    <div class="col-12 col-md-8">
      <h1 class="h3 mb-1">Dashboard</h1>
      <p class="text-muted mb-0 small">
        High-level overview of what is happening across Integrated Oasis.
      </p>
    </div>
    <div class="col-12 col-md-4 text-md-end">
      <a href="/admin/users" class="btn btn-success btn-sm me-2 mb-2 mb-md-0">
        <i class="fa-solid fa-user-plus me-1"></i> View Users
      </a>
      <a href="/admin/settings" class="btn btn-outline-secondary btn-sm">
        <i class="fa-solid fa-sliders me-1"></i> Settings
      </a>
    </div>
  </div>

  <div class="row g-4 mb-4">
    <div class="col-12 col-md-4">
      <div class="admin-card h-100">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <span class="text-muted small">Total Users</span>
          <span class="badge bg-success-subtle text-success small">All time</span>
        </div>
        <h2 class="h3 mb-1"><%= typeof totalUsers !== 'undefined' ? totalUsers : 0 %></h2>
        <p class="small text-muted mb-0">
          +<%= typeof newUsersLast24h !== 'undefined' ? newUsersLast24h : 0 %> new signups in the last 24 hours.
        </p>
      </div>
    </div>
    <div class="col-12 col-md-4">
      <div class="admin-card h-100">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <span class="text-muted small">Active Courses</span>
          <span class="badge bg-primary-subtle text-primary small">Live</span>
        </div>
        <h2 class="h3 mb-1"><%= typeof totalCourses !== 'undefined' ? totalCourses : 0 %></h2>
        <p class="small text-muted mb-0">Online and in-house training currently available.</p>
      </div>
    </div>
    <div class="col-12 col-md-4">
      <div class="admin-card h-100">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <span class="text-muted small">Support Tickets</span>
          <span class="badge bg-warning-subtle text-warning small">Pending</span>
        </div>
        <h2 class="h3 mb-1">7</h2>
        <p class="small text-muted mb-0">Awaiting response from the support team.</p>
      </div>
    </div>
  </div>

  <div class="row g-4">
    <div class="col-12 col-lg-8">
      <div class="admin-card h-100">
        <% const recentUsersList = Array.isArray(recentUsers) ? recentUsers : []; %>
        <% const recentActivitiesList = Array.isArray(recentActivities) ? recentActivities : []; %>
        <div class="d-flex justify-content-between align-items-center mb-3">
          <h2 class="h6 mb-0">Recent Activity</h2>
          <span class="small text-muted">
            <% if (recentActivitiesList.length) { %>
              Latest <%= recentActivitiesList.length %> activities
            <% } else if (recentUsersList.length) { %>
              Latest <%= recentUsersList.length %> user signups
            <% } else { %>
              No recent activities
            <% } %>
          </span>
        </div>
        <ul class="list-unstyled small mb-0 admin-activity-list">
          <% if (recentActivitiesList.length) { %>
            <% recentActivitiesList.forEach(function(activity) { %>
              <li class="mb-2">
                <% if (activity.type === 'followup_email') { %>
                  <span class="badge bg-primary-soft me-2">
                    <i class="fa-solid fa-envelope"></i>
                  </span>
                  <%= activity.description %>
                  <span class="text-muted">
                    <%= activity.createdAt ? new Date(activity.createdAt).toLocaleString() : '' %>
                  </span>.
                <% } else if (activity.type === 'user_signup') { %>
                  <span class="badge bg-success-soft me-2">
                    <i class="fa-solid fa-user-plus"></i>
                  </span>
                  <%= activity.description %>
                  <span class="text-muted">
                    <%= activity.createdAt ? new Date(activity.createdAt).toLocaleString() : '' %>
                  </span>.
                <% } else if (activity.type === 'user_deleted') { %>
                  <span class="badge bg-danger-soft me-2">
                    <i class="fa-solid fa-user-minus"></i>
                  </span>
                  <%= activity.description %>
                  <span class="text-muted">
                    <%= activity.createdAt ? new Date(activity.createdAt).toLocaleString() : '' %>
                  </span>.
                  <span class="badge bg-info-soft me-2">
                    <i class="fa-solid fa-circle-info"></i>
                  </span>
                  <%= activity.description %>
                  <span class="text-muted">
                    <%= activity.createdAt ? new Date(activity.createdAt).toLocaleString() : '' %>
                  </span>.
                <% } %>
              </li>
            <% }); %>
          <% } else if (recentUsersList.length) { %>
            <% recentUsersList.forEach(function(user) { %>
              <li class="mb-2">
                <span class="badge bg-success-soft me-2">
                  <i class="fa-solid fa-user-plus"></i>
                </span>
                New user
                <strong><%= user.username || user.email %></strong>
                (<span class="text-muted"><%= user.email %></span>)
                joined
                <span class="text-muted">
                  <%= user.createdAt ? user.createdAt.toISOString().slice(0, 10) : '' %>
                </span>.
              </li>
            <% }); %>
          <% } else { %>
            <li class="text-muted">
              <span class="badge bg-light me-2">
                <i class="fa-solid fa-circle-info"></i>
              </span>
              No activities have been recorded yet.
            </li>
          <% } %>
        </ul>
      </div>
    </div>
    <div class="col-12 col-lg-4">
      <div class="admin-card h-100">
        <h2 class="h6 mb-3">Quick Links</h2>
        <div class="d-flex flex-column gap-2">
          <a href="/admin/users" class="btn btn-outline-success btn-sm text-start">
            <i class="fa-solid fa-users me-2"></i> Manage Users
          </a>
          <a href="/online-training" class="btn btn-outline-primary btn-sm text-start">
            <i class="fa-solid fa-chalkboard-user me-2"></i> View Public Courses
          </a>
          <a href="/contact" class="btn btn-outline-secondary btn-sm text-start">
            <i class="fa-solid fa-headset me-2"></i> Contact Support
          </a>
        </div>
      </div>
    </div>
  </div>

  <div class="row g-3 mt-3">
    <div class="col-12 col-lg-8">
      <div class="admin-card admin-calendar-card h-100">
        <div class="d-flex justify-content-between align-items-center mb-2">
          <h2 class="h6 mb-0">Meetings Calendar</h2>
          <span class="small text-muted">Schedule and track office meetings</span>
        </div>
        <div id="adminMeetingsCalendar" class="admin-calendar-container"></div>
      </div>
    </div>
    <div class="col-12 col-lg-4">
      <div class="admin-card h-100 small">
        <% const upcomingList = Array.isArray(upcomingMeetings) ? upcomingMeetings : []; %>
        <div class="d-flex justify-content-between align-items-center mb-2">
          <h2 class="h6 mb-0">Upcoming Meetings</h2>
          <span class="text-muted small"><%= upcomingList.length ? upcomingList.length + ' scheduled' : 'No upcoming' %></span>
        </div>
        <p class="text-muted mb-2">Select a day on the calendar to add a meeting. Click an event to remove it.</p>
        <ul class="list-unstyled mb-0">
          <% if (upcomingList.length) { %>
            <% upcomingList.forEach(function(meeting) { %>
              <% const start = meeting.start ? meeting.start.toISOString().slice(0, 16).replace('T', ' ') : ''; %>
              <li class="mb-2 d-flex align-items-start">
                <span class="badge bg-success-soft me-2 mt-1">
                  <i class="fa-solid fa-circle"></i>
                </span>
                <div>
                  <div class="fw-semibold"><%= meeting.title %></div>
                  <% if (start) { %>
                    <div class="text-muted"><%= start %></div>
                  <% } %>
                </div>
              </li>
            <% }); %>
          <% } else { %>
            <li class="text-muted d-flex align-items-center">
              <i class="fa-solid fa-circle-info me-2"></i>
              No upcoming meetings scheduled.
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </div>

</section>
