<section class="admin-section" data-aos="fade-up">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="h4 mb-1">Users</h1>
      <p class="text-muted small mb-0">Key insights about your learners and admins.</p>
    </div>
    <a href="/admin/dashboard" class="btn btn-outline-secondary btn-sm">
      <i class="fa-solid fa-arrow-left me-1"></i> Back to Dashboard
    </a>
  </div>

  <% const userList = Array.isArray(users) ? users : []; %>
  <% const totalUsers = userList.length; %>
  <% const adminCount = userList.filter(u => u.role === 'admin').length; %>
  <% const studentCount = userList.filter(u => u.role !== 'admin').length; %>
  <% const genderSetCount = userList.filter(u => u.gender).length; %>

  <div class="row g-3 mb-4">
    <div class="col-12 col-md-3">
      <div class="admin-card h-100">
        <p class="text-muted small mb-1">Total Users</p>
        <div class="d-flex align-items-end justify-content-between">
          <span class="h4 mb-0"><%= totalUsers %></span>
          <i class="fa-solid fa-users text-muted"></i>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-3">
      <div class="admin-card h-100">
        <p class="text-muted small mb-1">Admins</p>
        <div class="d-flex align-items-end justify-content-between">
          <span class="h4 mb-0"><%= adminCount %></span>
          <i class="fa-solid fa-user-shield text-muted"></i>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-3">
      <div class="admin-card h-100">
        <p class="text-muted small mb-1">Students</p>
        <div class="d-flex align-items-end justify-content-between">
          <span class="h4 mb-0"><%= studentCount %></span>
          <i class="fa-solid fa-user-graduate text-muted"></i>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-3">
      <div class="admin-card h-100">
        <p class="text-muted small mb-1">Profiles with Gender</p>
        <div class="d-flex align-items-end justify-content-between">
          <span class="h4 mb-0"><%= genderSetCount %></span>
          <i class="fa-solid fa-venus-mars text-muted"></i>
        </div>
      </div>
    </div>
  </div>

  <div class="admin-card">
    <div class="mb-3">
      <div class="d-flex justify-content-between align-items-center mb-2">
        <div>
          <h2 class="h6 mb-1">All Users</h2>
          <p class="text-muted small mb-0">Search and review user accounts.</p>
        </div>
        <div class="d-flex justify-content-center">
        <div class="input-group input-group-sm" style="max-width: 360px; width: 100%;">
          <span class="input-group-text bg-light border-end-0">
            <i class="fa-solid fa-magnifying-glass"></i>
          </span>
          <input
            type="search"
            id="adminUserSearchInput"
            class="form-control form-control-sm border-start-0"
            placeholder="Search by name..."
            autocomplete="off"
          >
        </div>
      </div>
        <button class="btn btn-success btn-sm" type="button">
          <i class="fa-solid fa-user-plus me-1"></i> Add User
        </button>
      </div>
      
    </div>

    <div class="table-responsive">
      <table class="table table-sm align-middle mb-0">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Role</th>
            <th scope="col">Gender</th>
            <th scope="col">Joined</th>
            <th scope="col">Status</th>
            <th scope="col" class="text-end">Actions</th>
          </tr>
        </thead>
        <tbody class="small">
          <% if (userList.length) { %>
            <% userList.forEach(function(user) { %>
              <tr class="admin-user-row" data-name="<%= (user.username || '').toLowerCase() %>">
                <td>
                  <div class="fw-semibold"><%= user.username %></div>
                  <div class="text-muted">#<%= user.id %></div>
                </td>
                <td><%= user.email %></td>
                <td class="text-capitalize">
                  <span class="badge bg-light text-dark"><%= user.role || 'student' %></span>
                </td>
                <td class="text-capitalize">
                  <%= user.gender || '—' %>
                </td>
                <td>
                  <%= user.createdAt ? user.createdAt.toISOString().slice(0, 10) : '—' %>
                </td>
                <td>
                  <span class="badge bg-success-soft">Active</span>
                </td>
                <td class="text-end">
                  <button class="btn btn-outline-secondary btn-xs" type="button">View</button>
                </td>
              </tr>
            <% }); %>
            <tr id="adminUserSearchEmptyRow" style="display: none;">
              <td colspan="7" class="text-center text-muted py-3">
                <i class="fa-solid fa-user-slash me-2"></i>
                No users found for this search.
              </td>
            </tr>
          <% } else { %>
            <tr>
              <td colspan="7" class="text-center text-muted py-3">
                No users found.
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    <div class="d-flex justify-content-between align-items-center mt-3 small" id="adminUserPagination" style="display: none;">
      <div>
        Showing <span id="adminUserPageFrom">0</span>–<span id="adminUserPageTo">0</span>
        of <span id="adminUserTotal">0</span> users
      </div>
      <nav aria-label="User list pagination">
        <ul class="pagination pagination-sm mb-0">
          <li class="page-item">
            <button class="page-link" type="button" id="adminUserPrev">Prev</button>
          </li>
          <li class="page-item disabled">
            <span class="page-link" id="adminUserPageLabel">Page 1 of 1</span>
          </li>
          <li class="page-item">
            <button class="page-link" type="button" id="adminUserNext">Next</button>
          </li>
        </ul>
      </nav>
    </div>
  </div>

  <script>
    (function () {
      const searchInput = document.getElementById("adminUserSearchInput");
      const rows = Array.from(document.querySelectorAll(".admin-user-row"));
      const emptyRow = document.getElementById("adminUserSearchEmptyRow");
      const pagination = document.getElementById("adminUserPagination");
      const pageFromEl = document.getElementById("adminUserPageFrom");
      const pageToEl = document.getElementById("adminUserPageTo");
      const totalEl = document.getElementById("adminUserTotal");
      const prevBtn = document.getElementById("adminUserPrev");
      const nextBtn = document.getElementById("adminUserNext");
      const pageLabel = document.getElementById("adminUserPageLabel");
      const pageSize = 10;
      let currentPage = 1;

      if (!searchInput || !rows.length) return;

      const getFilteredRows = () => {
        const query = searchInput.value.trim().toLowerCase();
        return rows.filter((row) => {
          const name = (row.getAttribute("data-name") || "").toLowerCase();
          return !query || name.includes(query);
        });
      };

      const render = () => {
        const filtered = getFilteredRows();
        const total = filtered.length;

        // Hide all rows by default
        rows.forEach((row) => {
          row.style.display = "none";
        });

        if (total === 0) {
          if (emptyRow) emptyRow.style.display = "";
          if (pagination) pagination.style.display = "none";
          return;
        }

        if (emptyRow) emptyRow.style.display = "none";

        const totalPages = Math.ceil(total / pageSize);
        if (currentPage > totalPages) currentPage = totalPages;
        if (currentPage < 1) currentPage = 1;

        const startIndex = (currentPage - 1) * pageSize;
        const endIndex = Math.min(startIndex + pageSize, total);

        for (let i = startIndex; i < endIndex; i++) {
          filtered[i].style.display = "";
        }

        if (pagination && pageFromEl && pageToEl && totalEl && prevBtn && nextBtn && pageLabel) {
          pagination.style.display = totalPages > 1 ? "" : "none";
          pageFromEl.textContent = startIndex + 1;
          pageToEl.textContent = endIndex;
          totalEl.textContent = total;
          pageLabel.textContent = `Page ${currentPage} of ${totalPages}`;
          prevBtn.disabled = currentPage === 1;
          nextBtn.disabled = currentPage === totalPages;
        }
      };

      searchInput.addEventListener("input", () => {
        currentPage = 1;
        render();
      });

      if (prevBtn && nextBtn) {
        prevBtn.addEventListener("click", () => {
          if (currentPage > 1) {
            currentPage -= 1;
            render();
          }
        });

        nextBtn.addEventListener("click", () => {
          currentPage += 1;
          render();
        });
      }

      // Initial render
      render();
    })();
  </script>
</section>
