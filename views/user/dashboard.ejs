<section class="admin-section" data-aos="fade-up">
  <div class="row g-4 align-items-center mb-3">
    <div class="col-12 col-md-8">
      <div class="d-flex align-items-center gap-3">
        <div
          class="rounded-circle bg-success-subtle d-inline-flex align-items-center justify-content-center"
          style="width: 48px; height: 48px;"
        >
          <span class="fw-bold text-success text-uppercase">
            <%= (currentUser && (currentUser.username || currentUser.email)
              ? (currentUser.username || currentUser.email).charAt(0)
              : 'U') %>
          </span>
        </div>
        <div>
          <h1 class="h5 mb-1">Welcome back</h1>
          <p class="text-muted small mb-0">
            <%= currentUser && currentUser.email ? currentUser.email : 'Your email will appear here.' %>
          </p>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-4 text-md-end">
      <a href="/user/courses" class="btn btn-outline-primary btn-sm">My Courses</a>
      <a href="/user/settings" class="btn btn-outline-secondary btn-sm ms-2">Settings</a>
    </div>
  </div>

  <div class="row g-4">
    <div class="col-12 col-md-6">
      <div class="admin-card h-100">
    <h2 class="h6">
      Welcome back<% if (typeof currentUser !== 'undefined' && currentUser) { %>,
        <%= currentUser.username || currentUser.email %>
      <% } %>!
    </h2>
    <p class="small text-muted mb-0">Quick stats and recent activity will appear here.</p>
    </div>
    </div>
    <div class="col-12 col-md-6">
      <div class="admin-card h-100">
        <h2 class="h6">Your Progress</h2>
        <ul class="small mb-0">
          <li>Enrolled courses: 3</li>
          <li>Progress today: 2 lessons</li>
          <li>Notifications: 1</li>
        </ul>
      </div>
    </div>
  </div>
</section>
