<!-- Signup Page -->
<section class="auth-hero py-4 py-md-5" data-aos="fade-up">
  <div class="container">
    <div class="row justify-content-center mb-4 text-center">
      <div class="col-lg-7">
        <h1 class="fw-bold mb-2">Create your Integrated Oasis account</h1>
        <p class="text-muted mb-0">
          Join our learning community and get access to structured courses, resources, and certifications.
        </p>
      </div>
    </div>

    <div class="row justify-content-center gx-0 gy-4 align-items-stretch">
      <!-- Sign Up Form -->
      <div class="col-lg-5" data-aos="fade-right">
        <div class="auth-card p-4 p-md-5 h-100">
          <div class="text-center mb-3">
            <img src="/images/logo.png" alt="Integrated Oasis Logo" height="36" class="mb-2" />
            <!-- <div class="fw-semibold text-muted small">Integrated Oasis</div> -->
          </div>
          <h2 class="h4 fw-bold mb-2 text-center">Sign up in a few steps</h2>
          <p class="text-muted small mb-4 text-center">
            Tell us a bit about yourself so we can personalize your learning experience.
          </p>

          <form action="/signup" method="post" novalidate>
            <div class="mb-3">
              <label for="fullName" class="form-label small text-muted">Full name</label>
              <input
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                placeholder="Enter your full name"
                required
              />
            </div>

            <div class="mb-3">
              <label for="signupEmail" class="form-label small text-muted">Email address</label>
              <input
                type="email"
                class="form-control"
                id="signupEmail"
                name="email"
                placeholder="you@example.com"
                required
              />
            </div>

            <div class="mb-3">
              <label for="phone" class="form-label small text-muted">Phone / WhatsApp (optional)</label>
              <input
                type="tel"
                class="form-control"
                id="phone"
                name="phone"
                placeholder="e.g. +234 803 000 0000"
              />
            </div>

            <div class="mb-3">
              <label for="interest" class="form-label small text-muted">Area of interest</label>
              <select
                id="interest"
                name="interest"
                class="form-select"
                required
              >
                <option value="" selected disabled>Select your primary interest</option>
                <option value="data-analytics">Data Analytics</option>
                <option value="software-development">Software / Web Development</option>
                <option value="cybersecurity">Cybersecurity</option>
                <option value="office-productivity">Office Productivity / Digital Skills</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div class="row g-3 mb-1">
              <div class="col-md-6">
                <label for="signupPassword" class="form-label small text-muted">Password</label>
                <input
                  type="password"
                  class="form-control"
                  id="signupPassword"
                  name="password"
                  placeholder="Create a password"
                  required
                />
              </div>
              <div class="col-md-6">
                <label for="signupPasswordConfirm" class="form-label small text-muted">Confirm password</label>
                <input
                  type="password"
                  class="form-control"
                  id="signupPasswordConfirm"
                  name="passwordConfirm"
                  placeholder="Repeat password"
                  required
                />
              </div>
            </div>

            <div class="form-check small my-3">
              <input class="form-check-input" type="checkbox" value="1" id="terms" name="terms" required />
              <label class="form-check-label" for="terms">
                I agree to the <a href="#" class="text-decoration-none">Terms of Use</a> and
                <a href="#" class="text-decoration-none">Privacy Policy</a>.
              </label>
            </div>

            <button type="submit" class="btn btn-success w-100 mb-3">
              <i class="fa-solid fa-user-plus me-1"></i> Create account
            </button>

            <p class="small text-muted mb-0 text-center">
              Already have an account?
              <a href="/auth" class="text-decoration-none">Login instead</a>.
            </p>
          </form>
        </div>
      </div>

      <!-- Info / Benefits -->
      <div class="col-lg-5" data-aos="fade-left">
        <div class="auth-side-card p-4 p-md-5 h-100 d-flex flex-column justify-content-between">
          <div>
            <h2 class="h4 fw-bold mb-3">Why create an account?</h2>
            <ul class="small text-muted mb-4 ps-3">
              <li>Enroll in online, in-house, and hybrid trainings seamlessly.</li>
              <li>Track your learning progress and completed modules.</li>
              <li>Receive updates about new courses and scholarship opportunities.</li>
              <li>Download notes, templates, and practice datasets shared by instructors.</li>
            </ul>
          </div>

          <div class="mt-3 small text-muted">
            <p class="mb-1">
              Integrated Oasis learners come from diverse backgrounds  students, professionals, and business owners.
            </p>
            <p class="mb-0">
              You can also walk into our ICT Center in Owerri to register in person if you prefer offline support.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
