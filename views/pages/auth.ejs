<!-- Auth Page: Login / Sign Up -->
<section class="auth-hero py-4 py-md-5" data-aos="fade-up">
  <div class="container">
    <div class="row justify-content-center mb-4 text-center">
      <div class="col-lg-7">
        <h1 class="fw-bold mb-2">Welcome back to Integrated Oasis</h1>
        <p class="text-muted mb-0">
          Sign in to continue your learning journey or create a new account in just a few steps.
        </p>
      </div>
    </div>

    <div class="row justify-content-center gx-0 gy-4 align-items-stretch">
      <!-- Login Card -->
      <div class="col-lg-5" data-aos="fade-right">
        <div class="auth-card p-4 p-md-5 h-100">
          <div class="text-center mb-3">
            <img src="/images/logo.png" alt="Integrated Oasis Logo" height="36" class="mb-2" />
            <!-- <div class="fw-semibold text-muted small">Integrated Oasis</div> -->
          </div>
          <h2 class="h4 fw-bold mb-2 text-center">Login to your account</h2>
          <p class="text-muted small mb-4 text-center">
            Enter your details below to access your dashboard, courses, and progress.
          </p>

          <% if (typeof errors !== 'undefined' && errors.length) { %>
            <div class="alert alert-danger alert-dismissible fade show small" role="alert">
              <ul class="mb-0 ps-3">
                <% errors.forEach(function(err){ %>
                  <li><%= err.msg %></li>
                <% }) %>
              </ul>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% } %>

          <% if (success && success.length) { %>
            <div class="alert alert-success alert-dismissible fade show small" role="alert">
              <%= success[0] %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% } %>

          <form action="/auth" method="post" novalidate id="loginForm">
            <div class="mb-3">
              <label for="authEmail" class="form-label small text-muted">Email address</label>
              <input
                type="email"
                class="form-control"
                id="authEmail"
                name="email"
                placeholder="you@example.com"
                value="<%= old && old.email ? old.email : '' %>"
                required
              />
            </div>

            <div class="mb-2">
              <label for="authPassword" class="form-label small text-muted">Password</label>
              <input
                type="password"
                class="form-control"
                id="authPassword"
                name="password"
                placeholder="Enter your password"
                required
              />
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
              <div class="form-check small">
                <input class="form-check-input" type="checkbox" value="1" id="rememberMe" name="remember" />
                <label class="form-check-label" for="rememberMe">
                  Remember me
                </label>
              </div>
              <a href="#" class="small text-decoration-none">Forgot password?</a>
            </div>

            <button type="submit" class="btn btn-success w-100 mb-3" id="loginSubmitBtn">
              <span class="spinner-border spinner-border-sm me-2 d-none" role="status" aria-hidden="true"></span>
              <span class="login-btn-text">
                <i class="fa-solid fa-right-to-bracket me-1"></i> Login
              </span>
            </button>

            <p class="small text-muted mb-0 text-center">
              By continuing, you agree to our
              <a href="#" class="text-decoration-none">Terms</a> and
              <a href="#" class="text-decoration-none">Privacy Policy</a>.
            </p>
          </form>
        </div>
      </div>

      <!-- Sign Up Teaser / Info -->
      <div class="col-lg-5" data-aos="fade-left">
        <div class="auth-side-card p-4 p-md-5 h-100 d-flex flex-column justify-content-between">
          <div>
            <h2 class="h4 fw-bold mb-3">New to Integrated Oasis?</h2>
            <p class="text-muted small mb-3">
              Create a free account to enroll in courses, track your progress, and access exclusive resources from our
              instructors.
            </p>
            <ul class="small text-muted mb-4 ps-3">
              <li>Access all your enrolled online and in-house trainings in one place.</li>
              <li>Download resources, assignments, and practice materials.</li>
              <li>Get certificates for completed programs and share your achievements.</li>
            </ul>
          </div>

          <div class="mt-3">
            <a href="/signup" class="btn btn-success w-100 mb-2">
              <i class="fa-solid fa-user-plus me-1"></i> Create a new account
            </a>
            <p class="small text-muted mb-0 text-center">
              Already registered with us at the center? Use the email you provided during registration.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
