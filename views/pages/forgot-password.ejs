<!-- Forgot Password Page -->
<section class="auth-hero py-4 py-md-5" data-aos="fade-up">
  <div class="container">
    <div class="row justify-content-center mb-4 text-center">
      <div class="col-lg-7">
        <h1 class="fw-bold mb-2">Forgot Your Password?</h1>
        <p class="text-muted mb-0">
          No worries! Enter your email address and we'll send you a link to reset your password.
        </p>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-lg-5">
        <div class="auth-card p-4 p-md-5 h-100">
          <div class="text-center mb-3">
            <img src="/images/logo.png" alt="Integrated Oasis Logo" height="36" class="mb-2" />
          </div>

          <% if (typeof errors !== 'undefined' && errors.length) { %>
            <div class="alert alert-danger alert-dismissible fade show small" role="alert">
              <ul class="mb-0 ps-3">
                <% errors.forEach(function(err){ %>
                  <li><%= err.msg %></li>
                <% }) %>
              </ul>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% } %>

          <% if (success && success.length) { %>
            <div class="alert alert-success alert-dismissible fade show small" role="alert">
              <%= success[0] %>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% } %>

          <form action="/forgot-password" method="post" novalidate id="forgotPasswordForm">
            <div class="mb-3">
              <label for="forgotEmail" class="form-label small text-muted">Email address</label>
              <input
                type="email"
                class="form-control"
                id="forgotEmail"
                name="email"
                placeholder="you@example.com"
                value="<%= old && old.email ? old.email : '' %>"
                required
              />
              <div class="form-text small">
                We'll send a password reset link to this email address.
              </div>
            </div>

            <button type="submit" class="btn btn-success w-100 mb-3" id="forgotPasswordSubmitBtn">
              <span class="spinner-border spinner-border-sm me-2 d-none" role="status" aria-hidden="true"></span>
              <span class="forgot-btn-text">
                <i class="fa-solid fa-paper-plane me-1"></i> Send Reset Link
              </span>
            </button>

            <div class="text-center">
              <a href="/auth" class="small text-decoration-none">
                <i class="fa-solid fa-arrow-left me-1"></i> Back to Login
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>