<!-- In-House Training Page -->
<section class="inhouse-hero py-4 py-md-5" data-aos="fade-up">
  <div class="container">
    <div class="row justify-content-center text-center mb-4">
      <div class="col-lg-8">
        <h1 class="fw-bold mb-2">In-House Training for Teams & Organizations</h1>
        <p class="text-muted mb-0">
          Bring Integrated Oasis instructors to your organization for tailored, hands-on training that matches your
          tools, workflows, and business goals.
        </p>
      </div>
    </div>
  </div>
</section>

<section class="py-4 pb-5" data-aos="fade-up">
  <div class="container">
    <!-- Filter + Intro Row -->
    <div class="row g-4 align-items-start mb-4">
      <div class="col-lg-7">
        <h2 class="h4 fw-bold mb-3">Training Programs</h2>
        <p class="text-muted small mb-0">
          Explore our core in-house training tracks or request a fully customized program for your team.
        </p>
      </div>
      <div class="col-lg-5">
        <div class="inhouse-filters p-3 p-md-4">
          <h3 class="h6 fw-bold mb-3">Filter options</h3>
          <form class="row g-2" novalidate>
            <div class="col-6">
              <label class="form-label small text-muted" for="filterLocation">Location</label>
              <select id="filterLocation" class="form-select form-select-sm">
                <option selected>Any</option>
                <option>On-site (Your office)</option>
                <option>Integrated Oasis Center (Owerri)</option>
                <option>Virtual / Hybrid</option>
              </select>
            </div>
            <div class="col-6">
              <label class="form-label small text-muted" for="filterDate">Date</label>
              <select id="filterDate" class="form-select form-select-sm">
                <option selected>Flexible</option>
                <option>Weekdays</option>
                <option>Weekends</option>
                <option>Evenings</option>
              </select>
            </div>
            <div class="col-6">
              <label class="form-label small text-muted" for="filterDuration">Duration</label>
              <select id="filterDuration" class="form-select form-select-sm">
                <option selected>Any</option>
                <option>1-day workshop</option>
                <option>2-3 days</option>
                <option>1 week bootcamp</option>
              </select>
            </div>
            <div class="col-6">
              <label class="form-label small text-muted" for="filterTrainer">Trainer</label>
              <select id="filterTrainer" class="form-select form-select-sm">
                <option selected>Any trainer</option>
                <option>Data Analytics Lead</option>
                <option>Software Engineering Lead</option>
                <option>Cybersecurity Specialist</option>
              </select>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- Training Categories -->
    <div class="row g-4 mb-5">
      <div class="col-md-4" data-aos="fade-up">
        <div class="inhouse-program-card h-100 p-4">
          <h3 class="h5 fw-bold mb-2">Web Development Bootcamp</h3>
          <p class="small text-muted mb-3">
            Intensive, project-based training covering HTML, CSS, JavaScript, and modern frameworks suitable for your
            team's stack.
          </p>
          <ul class="small text-muted mb-3 ps-3">
            <li>Front-end and back-end fundamentals</li>
            <li>Real-world internal tools and dashboards</li>
            <li>Best practices for maintainable code</li>
          </ul>
          <span class="badge bg-success-subtle text-success small">Ideal for developer teams</span>
        </div>
      </div>

      <div class="col-md-4" data-aos="fade-up" data-aos-delay="50">
        <div class="inhouse-program-card h-100 p-4">
          <h3 class="h5 fw-bold mb-2">Data Science Workshop</h3>
          <p class="small text-muted mb-3">
            Practical data analytics, dashboards, and reporting tailored to the datasets and tools your business uses.
          </p>
          <ul class="small text-muted mb-3 ps-3">
            <li>Data cleaning, analysis, and visualization</li>
            <li>Excel, Power BI, or Python-based workflows</li>
            <li>Decision-making with real business data</li>
          </ul>
          <span class="badge bg-primary-subtle text-primary small">Great for analysts & managers</span>
        </div>
      </div>

      <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
        <div class="inhouse-program-card h-100 p-4">
          <h3 class="h5 fw-bold mb-2">Cybersecurity Certification Prep</h3>
          <p class="small text-muted mb-3">
            Strengthen your organization's security posture with awareness training and certification-focused content.
          </p>
          <ul class="small text-muted mb-3 ps-3">
            <li>Security awareness for non-technical staff</li>
            <li>Hands-on labs for IT/security teams</li>
            <li>Preparation for industry certifications</li>
          </ul>
          <span class="badge bg-warning-subtle text-warning small">Security & compliance teams</span>
        </div>
      </div>
    </div>

    <!-- Corporate & Customized Programs -->
    <div class="row g-4 mb-5">
      <div class="col-lg-6" data-aos="fade-right">
        <div class="inhouse-program-card h-100 p-4">
          <h2 class="h5 fw-bold mb-3">Corporate Training Programs</h2>
          <p class="small text-muted mb-3">
            Partner with Integrated Oasis to design structured learning paths for your employees across multiple
            departments.
          </p>
          <ul class="small text-muted mb-3 ps-3">
            <li>Onboarding tracks for new hires</li>
            <li>Upskilling programs for existing staff</li>
            <li>Leadership and digital transformation workshops</li>
            <li>Blended learning: on-site + virtual support</li>
          </ul>
          <p class="small text-muted mb-0">
            Our team can align training outcomes with your KPIs, performance reviews, or organizational change projects.
          </p>
        </div>
      </div>

      <div class="col-lg-6" data-aos="fade-left">
        <div class="inhouse-program-card h-100 p-4">
          <h2 class="h5 fw-bold mb-3">Customized Training Plans</h2>
          <p class="small text-muted mb-3">
            Every organization is unique. We can adapt our curriculum or build a completely new program for your
            context.
          </p>
          <ul class="small text-muted mb-3 ps-3">
            <li>Skill gap analysis and training needs assessment</li>
            <li>Role-specific training tracks (e.g. sales, operations, IT)</li>
            <li>Flexible delivery: short workshops, bootcamps, or ongoing series</li>
          </ul>
          <p class="small text-muted mb-0">
            Share your goals and constraints, and we will propose a plan, schedule, and budget fit for your organization.
          </p>
        </div>
      </div>
    </div>

    <!-- Business Inquiry Contact Form -->
    <div class="row justify-content-center" data-aos="fade-up">
      <div class="col-lg-8">
        <div class="inhouse-inquiry-card p-4 p-md-5">
          <h2 class="h5 fw-bold mb-3 text-center">Contact us for business inquiries</h2>
          <p class="small text-muted mb-4 text-center">
            Tell us about your organization, the skills you want to build, and preferred timing. Our team will follow up
            with a tailored proposal.
          </p>

          <form action="/in-house-training" method="post" novalidate>
            <div class="row g-3 mb-2">
              <div class="col-md-6">
                <label for="companyName" class="form-label small text-muted">Organization / Company name</label>
                <input
                  type="text"
                  class="form-control"
                  id="companyName"
                  name="companyName"
                  placeholder="Enter organization name"
                  required
                />
              </div>
              <div class="col-md-6">
                <label for="contactPerson" class="form-label small text-muted">Contact person</label>
                <input
                  type="text"
                  class="form-control"
                  id="contactPerson"
                  name="contactPerson"
                  placeholder="Your full name"
                  required
                />
              </div>
              <div class="col-md-6">
                <label for="businessEmail" class="form-label small text-muted">Business email</label>
                <input
                  type="email"
                  class="form-control"
                  id="businessEmail"
                  name="email"
                  placeholder="you@company.com"
                  required
                />
              </div>
              <div class="col-md-6">
                <label for="businessPhone" class="form-label small text-muted">Phone / WhatsApp</label>
                <input
                  type="tel"
                  class="form-control"
                  id="businessPhone"
                  name="phone"
                  placeholder="e.g. +234 803 000 0000"
                />
              </div>
              <div class="col-12">
                <label for="trainingInterest" class="form-label small text-muted">Training interest</label>
                <select
                  id="trainingInterest"
                  name="trainingInterest"
                  class="form-select"
                  required
                >
                  <option value="" selected disabled>Select main training area</option>
                  <option value="web-dev">Web Development Bootcamp</option>
                  <option value="data-science">Data Science Workshop</option>
                  <option value="cybersecurity">Cybersecurity Certification</option>
                  <option value="mixed">Combination / Multiple tracks</option>
                  <option value="other">Other (describe below)</option>
                </select>
              </div>
              <div class="col-12">
                <label for="trainingMessage" class="form-label small text-muted">Additional details</label>
                <textarea
                  id="trainingMessage"
                  name="message"
                  class="form-control"
                  rows="5"
                  placeholder="Share expected number of participants, preferred dates, location, and any specific tools or goals."
                  required
                ></textarea>
              </div>
            </div>

            <div class="d-flex justify-content-between align-items-center flex-wrap mt-2">
              <button type="submit" class="btn btn-success mt-2">
                <i class="fa-solid fa-paper-plane me-1"></i> Submit inquiry
              </button>
              <p class="small text-muted mt-2 mb-0">
                You can also reach us via email at
                <a href="mailto:info@integratedoasis.com" class="text-decoration-none">info@integratedoasis.com</a>.
              </p>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
