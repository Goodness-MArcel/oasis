<!-- Contact Hero / Intro -->
<section class="contact-hero" data-aos="fade-up">
  <div class="container">
    <div class="row justify-content-center text-center mb-4">
      <div class="col-lg-8">
        <h1 class="fw-bold mb-3">
          Get in Touch with Integrated Oasis
        </h1>
        <p class="text-muted mb-0">
          Have questions about our online training, in-house programs, or free
          tutorials? Fill out the form and our team will get back to you.
        </p>
      </div>
    </div>
  </div>
</section>

<!-- Main Contact Content -->
<section class="py-4 pb-5" data-aos="fade-up">
  <div class="container">
    <div class="row g-4 align-items-start">
      <!-- Contact Form -->
      <div class="col-lg-7" data-aos="fade-right">
        <div class="contact-card p-4 p-md-5">
          <h2 class="h4 fw-bold mb-3">Contact Form</h2>
          <p class="text-muted small mb-4">
            Please complete the form below and let us know how we can help.
          </p>
          <form action="/contact" method="post" novalidate>
            <div class="row g-3">
              <div class="col-md-6">
                <label for="name" class="form-label small text-muted"
                  >Full Name</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="name"
                  name="name"
                  placeholder="Enter your full name"
                  required
                />
              </div>
              <div class="col-md-6">
                <label for="email" class="form-label small text-muted"
                  >Email Address</label
                >
                <input
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  placeholder="you@example.com"
                  required
                />
              </div>
              <div class="col-12">
                <label for="subject" class="form-label small text-muted"
                  >Subject</label
                >
                <input
                  type="text"
                  class="form-control"
                  id="subject"
                  name="subject"
                  placeholder="How can we help you?"
                  required
                />
              </div>
              <div class="col-12">
                <label for="message" class="form-label small text-muted"
                  >Message</label
                >
                <textarea
                  class="form-control"
                  id="message"
                  name="message"
                  rows="5"
                  placeholder="Tell us a bit more about your enquiry"
                  required
                ></textarea>
              </div>
              <div
                class="col-12 d-flex flex-wrap align-items-center justify-content-between mt-2"
              >
                <button type="submit" class="btn btn-primary mt-2">
                  <i class="fa-solid fa-paper-plane me-1"></i> Send Message
                </button>
                <div class="live-chat-badge mt-2">
                  <i class="fa-solid fa-comments"></i>
                  <span>Prefer live chat? Chat with us when available.</span>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>

      <!-- Contact Details & Socials -->
      <div class="col-lg-5" data-aos="fade-left">
        <div class="contact-details-card p-4 p-md-5 mb-4">
          <h2 class="h5 fw-bold mb-3">Office Address</h2>
          <div class="d-flex align-items-start mb-3">
            <div class="contact-icon">
              <i class="fa-solid fa-location-dot"></i>
            </div>
            <div class="small text-muted">
              <strong>Integrated Oasis Ict Center</strong><br />
              23 PortHacourt Rd, Owerri<br />
              Imo State, Nigeria
            </div>
          </div>

          <h2 class="h5 fw-bold mb-3 mt-4">Contact Details</h2>
          <div class="d-flex align-items-start mb-2">
            <div class="contact-icon">
              <i class="fa-solid fa-phone"></i>
            </div>
            <div class="small text-muted">
              Phone: <a href="tel:+2348036061366" class="text-decoration-none">+234 8036061366</a><br />
              WhatsApp:
              <a
                href="https://wa.me/2348036061366"
                target="_blank"
                class="text-decoration-none"
                rel="noopener"
                >Chat on WhatsApp</a
              >
            </div>
          </div>
          <div class="d-flex align-items-start mb-0">
            <div class="contact-icon">
              <i class="fa-solid fa-envelope"></i>
            </div>
            <div class="small text-muted">
              Email:
              <a href="mailto:info@integratedoasis.com"
                class="text-decoration-none"
                >info@integratedoasis.com</a
              >
            </div>
          </div>
        </div>

        <div class="contact-social" data-aos="fade-up">
          <h2 class="h6 fw-bold mb-3">Connect with Us</h2>
          <div class="d-flex flex-wrap gap-3">
            <a href="#" class="d-inline-flex align-items-center gap-2 small text-decoration-none">
              <i class="fa-brands fa-facebook"></i> <span>Facebook</span>
            </a>
            <a href="#" class="d-inline-flex align-items-center gap-2 small text-decoration-none">
              <i class="fa-brands fa-x-twitter"></i> <span>Twitter / X</span>
            </a>
            <a href="#" class="d-inline-flex align-items-center gap-2 small text-decoration-none">
              <i class="fa-brands fa-linkedin"></i> <span>LinkedIn</span>
            </a>
            <a href="#" class="d-inline-flex align-items-center gap-2 small text-decoration-none">
              <i class="fa-brands fa-instagram"></i> <span>Instagram</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Full-width map in container-fluid -->
  <div class="container-fluid px-0 mt-4">
    <div class="contact-map" data-aos="zoom-in">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3971.5373357088674!2d7.015894773968944!3d5.48689723434282!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1042599adbafffff%3A0xb5ec233e17c4f8ee!2sINTEGRATED%20OASIS%20ICT%20CENTRE!5e0!3m2!1sen!2sng!4v1765968243663!5m2!1sen!2sng"
