<!-- Reset Password Page -->
<section class="auth-hero py-4 py-md-5" data-aos="fade-up">
  <div class="container">
    <div class="row justify-content-center mb-4 text-center">
      <div class="col-lg-7">
        <h1 class="fw-bold mb-2">Reset Your Password</h1>
        <p class="text-muted mb-0">
          Enter your new password below to complete the reset process.
        </p>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-lg-5">
        <div class="auth-card p-4 p-md-5 h-100">
          <div class="text-center mb-3">
            <img src="/images/logo.png" alt="Integrated Oasis Logo" height="36" class="mb-2" />
          </div>

          <% if (typeof errors !== 'undefined' && errors.length) { %>
            <div class="alert alert-danger alert-dismissible fade show small" role="alert">
              <ul class="mb-0 ps-3">
                <% errors.forEach(function(err){ %>
                  <li><%= err.msg %></li>
                <% }) %>
              </ul>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
          <% } %>

          <form action="/reset-password" method="post" novalidate id="resetPasswordForm">
            <input type="hidden" name="token" value="<%= token %>" />

            <div class="mb-3">
              <label for="resetPassword" class="form-label small text-muted">New Password</label>
              <input
                type="password"
                class="form-control"
                id="resetPassword"
                name="password"
                placeholder="Enter your new password"
                required
                minlength="8"
              />
              <div class="form-text small">
                Must be at least 8 characters with letters, numbers, and special characters.
              </div>
            </div>

            <div class="mb-3">
              <label for="resetPasswordConfirm" class="form-label small text-muted">Confirm New Password</label>
              <input
                type="password"
                class="form-control"
                id="resetPasswordConfirm"
                name="passwordConfirm"
                placeholder="Confirm your new password"
                required
                minlength="8"
              />
            </div>

            <button type="submit" class="btn btn-success w-100 mb-3" id="resetPasswordSubmitBtn">
              <span class="spinner-border spinner-border-sm me-2 d-none" role="status" aria-hidden="true"></span>
              <span class="reset-btn-text">
                <i class="fa-solid fa-key me-1"></i> Reset Password
              </span>
            </button>

            <div class="text-center">
              <a href="/auth" class="small text-decoration-none">
                <i class="fa-solid fa-arrow-left me-1"></i> Back to Login
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>