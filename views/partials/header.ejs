<header class="site-header border-bottom bg-white sticky-top shadow-sm">
	<div class="container py-2 py-lg-3">
		<div class="d-flex align-items-center justify-content-between gap-3">
			<!-- Logo -->
			<a href="/" class="d-inline-flex align-items-center text-decoration-none">
				<img src="/images/logo.png" alt="Integrated Oasis Logo" height="32" class="me-2" />
				<span class="fw-semibold text-dark">Integrated Oasis</span>
			</a>

			<!-- Hamburger for small screens -->
		<button class="btn btn-outline-secondary d-inline-flex d-md-none align-items-center justify-content-center" id="navToggle" aria-label="Toggle navigation">
			<i class="fa-solid fa-bars"></i>
		</button>

			<!-- Navigation -->
			<nav class="nav-primary d-none d-md-block">
				<ul class="nav mb-0 align-items-center">
					<li class="nav-item"><a class="nav-link <%= currentPath === '/' ? 'active' : '' %>" href="/">Home</a></li>
					<li class="nav-item dropdown">
						<a
							class="nav-link dropdown-toggle <%= (currentPath.startsWith('/online-training') || currentPath.startsWith('/in-house-training') || currentPath.startsWith('/free-tutorials')) ? 'active' : '' %>"
							href="#"
							id="trainingDropdown"
							role="button"
							data-bs-toggle="dropdown"
							aria-expanded="false"
						>
							Training
						</a>
						<ul class="dropdown-menu" aria-labelledby="trainingDropdown">
							<li><a class="dropdown-item <%= currentPath.startsWith('/online-training') ? 'active' : '' %>" href="/online-training">Online Training</a></li>
							<li><a class="dropdown-item <%= currentPath.startsWith('/in-house-training') ? 'active' : '' %>" href="/in-house-training">In-House Training</a></li>
							<li><a class="dropdown-item <%= currentPath.startsWith('/free-tutorials') ? 'active' : '' %>" href="/free-tutorials">Free Tutorials</a></li>
						</ul>
					</li>
					<li class="nav-item"><a class="nav-link <%= currentPath.startsWith('/about') ? 'active' : '' %>" href="/about">About Us</a></li>
					<li class="nav-item"><a class="nav-link <%= currentPath.startsWith('/contact') ? 'active' : '' %>" href="/contact">Contact</a></li>
					<!-- Login/Signup link for medium screens -->
					<li class="nav-item d-lg-none"><a class="nav-link <%= currentPath.startsWith('/auth') ? 'active' : '' %>" href="/auth">Login/Signup</a></li>
					<!-- Login & Sign Up buttons for large screens -->
					<li class="nav-item ms-lg-3 d-none d-lg-flex align-items-center gap-2">
						<a href="/auth" class="btn btn-outline-primary btn-sm <%= currentPath.startsWith('/auth') ? 'active' : '' %>">Login</a>
						<a href="/signup" class="btn btn-success btn-sm <%= currentPath.startsWith('/signup') ? 'active' : '' %>">Sign Up</a>
					</li>
				</ul>
			</nav>
		</div>
	</div>

	<!-- Mobile menu -->
	<div class="container d-md-none" id="mobileMenu" hidden>
		<nav>
			<ul class="list-unstyled mb-2">
				<li><a class="d-block py-2 <%= currentPath === '/' ? 'active' : '' %>" href="/">Home</a></li>
				<li>
					<a class="d-block py-2 dropdown-toggle" href="#" data-bs-toggle="collapse" data-bs-target="#mobileTrainingMenu" aria-expanded="false">Training</a>
					<div class="collapse" id="mobileTrainingMenu">
						<ul class="list-unstyled ps-3">
							<li><a class="d-block py-2 <%= currentPath.startsWith('/online-training') ? 'active' : '' %>" href="/online-training">Online Training</a></li>
							<li><a class="d-block py-2 <%= currentPath.startsWith('/in-house-training') ? 'active' : '' %>" href="/in-house-training">In-House Training</a></li>
							<li><a class="d-block py-2 <%= currentPath.startsWith('/free-tutorials') ? 'active' : '' %>" href="/free-tutorials">Free Tutorials</a></li>
						</ul>
					</div>
				</li>
				<li><a class="d-block py-2 <%= currentPath.startsWith('/about') ? 'active' : '' %>" href="/about">About Us</a></li>
				<li><a class="d-block py-2 <%= currentPath.startsWith('/contact') ? 'active' : '' %>" href="/contact">Contact</a></li>
				<li class="mt-3">
					<div class="d-flex gap-2">
						<a class="btn btn-outline-primary flex-fill py-2 <%= currentPath.startsWith('/auth') ? 'active' : '' %>" href="/auth">Login</a>
						<a class="btn btn-primary flex-fill py-2 <%= currentPath.startsWith('/signup') ? 'active' : '' %>" href="/signup">Sign Up</a>
					</div>
				</li>
				<li class="mt-2">
					<a class="d-block py-2 btn btn-success w-100 <%= currentPath.startsWith('/get-started') ? 'active' : '' %>" href="/get-started">Get Started</a>
				</li>
		</ul>
		</nav>
	</div>
</header>
