<head>
  <!-- Basic Meta -->
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Dynamic Title -->
  <title><%= title ? title + " | Integrated Oasis" : "Integrated Oasis" %></title>

  <!-- SEO -->
  <meta
    name="description"
    content="<%= description || 'Integrated Oasis is a modern learning and training platform.' %>"
  />

  <meta name="author" content="Integrated Oasis Team" />

  <!-- Open Graph (Social Sharing) -->
  <meta property="og:title" content="<%= title || 'Integrated Oasis' %>" />
  <meta
    property="og:description"
    content="<%= description || 'Integrated Oasis — quality courses and tutorials.' %>"
  />
  <meta property="og:type" content="website" />
  <!-- Removed og:url and og:image to avoid undefined locals -->

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="<%= title || 'Integrated Oasis' %>" />
  <meta
    name="twitter:description"
    content="<%= description || 'Integrated Oasis — quality courses and tutorials.' %>"
  />
  <!-- Removed twitter:image to avoid undefined locals -->

  <!-- Favicon -->
  <!-- <link rel="icon" href="/favicon.ico" /> -->
  <link rel="apple-touch-icon" href="/images/logo.png" />

  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
    rel="stylesheet"
  />

  <!-- CSS -->
  <link rel="stylesheet" href="/css/main.css" />
  <% if (typeof pageStyles !== "undefined") { %>
    <link rel="stylesheet" href="/css/<%= pageStyles %>" />
  <% } %>

  <!-- AOS (Animate On Scroll) CSS -->
  <link
	rel="stylesheet"
	href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css"
  />

  <!-- Bootstrap (loaded from CDN; integrity removed to avoid SRI hash mismatch issues in dev) -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />

  <!-- Font Awesome Icons (CDN) -->
  <link
    rel="stylesheet"
    href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.5.1/css/all.min.css"
  />

</head>
